<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#0000"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="125dp">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img"
            android:clickable="false"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerCrop"
            app:civ_border_width="1dp"
            android:src="@drawable/logo"
            app:civ_shadow="true"
            app:civ_border="true"
            app:civ_border_color="#eee"
            app:civ_shadow_color="#ccc"
            app:civ_shadow_radius="1"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img"
            android:layout_toLeftOf="@+id/option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <com.balram.library.FotTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#b1581d"
                app:customfont="Exo2-Bold.otf"
                android:textSize="14dp"/>


            <com.balram.library.FotTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:drawableLeft="@drawable/order_qty"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#888"
                app:customfont="Exo2-Regular.otf"
                android:textSize="13dp"/>

         </LinearLayout>


        <LinearLayout
            android:id="@+id/option"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit"
                android:tint="#888"
                android:id="@+id/edit_cat"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="7dp"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/garbage"
                android:tint="#888"
                android:id="@+id/delete_data"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="7dp"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
